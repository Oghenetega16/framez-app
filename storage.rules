rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Posts images
    match /posts/{userId}/{fileName} {
      // Anyone can read
      allow read: if true;
      
      // Only authenticated users can write to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Avatar images
    match /avatars/{userId}/{fileName} {
      // Anyone can read
      allow read: if true;
      
      // Only authenticated users can write to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}